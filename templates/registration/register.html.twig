{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <style>
        .register-wrapper {
            margin: 5%;
            box-shadow: 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);
            text-align: center;
            padding: 5%;
        }

        .register-wrapper > form:nth-child(2) > div:nth-child(1) > label:nth-child(1),
        .register-wrapper > form:nth-child(2) > div:nth-child(2) > label:nth-child(1) {
            width: 150px;
        }

        .register-title-container {
            padding-bottom: 20px;
        }

        .register-button-container {
            padding-top: 20px;
        }


    </style>


    <div class="register-wrapper">
        <h1 class="register-title-container">Register</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}

        <div class="register-button-container text-center">
            <button class="btn btn-primary px-5" type="submit">Register</button>
        </div>
        {{ form_end(registrationForm) }}
    </div>
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
{% endblock %}
